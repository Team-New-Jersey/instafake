  <head>
      <meta charset="UTF-8">
      <title>Instafake</title>
      <link rel="stylesheet" href="/stylesheets/home.css"/>
      
      <% include ./partials/_header.ejs %>
  </head>
  <body>
    <div id="feed">
    <% postIds.forEach(function(posted) { //Going to make these variables a lot simpler with _.lodash, using _.zip and _.zipObject
      var postIdIndex = postIds.indexOf(posted); //which row is the posts id in
      var theUserId = postUserIds[postIdIndex]; // corresponding user_id
      var userIdIndex = userIds.indexOf(theUserId); // which row is the users id in
      var findName = usernames[userIdIndex]; // corresponding username 
      var idString = postIds.indexOf(posted); 
      var buttonId = "likeButton" + idString.toString();
      var h3Id = "getIt" + idString.toString(); %>
      <div id="post-1">
        <div class="post-head">
          <div class="user-1-thumbnail">
            <a href="profile.ejs"><img src="/images/User-1.jpg" alt="User 1"/></a>
          </div>
          <div class="user">
            <h3><%= findName %></h3>
            <h3 id='<%= h3Id %>'><%= posted  %></h3>
          </div>
        </div>
        <div class="post-body">
          <a href="profile.ejs" class="post-box"><img src="/images/Post-1.jpg" alt="Tracks!"/></a>
        </div>
        <div class="post-description">
          <p> Tracks! </p>
        </div>
        <div class="post-bottom">
          <div class="buttons">
            <button type="button">Edit</button>
            <button type="button">Delete</button>
          </div>
          <form action = "/api/protected/" method = "post">
              <input type="hidden" name="postId" value="<%= posted %>"> 
              <input id='<% buttonId %>' type="submit" name= "<% posted %>" />
          </form>
        </div>
      </div>
    <% }) %>
    </div>

